<Window x:Class="Physics_Simulation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Physics_Simulation"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">

   
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Vertical" Grid.Column="0">
                <Button Content="Grawitacja" Click="Gravity_Click"/>
                <Button Content="Tarcie" Click="Friction_Click"/>
                <!-- Dodaj tutaj inne przyciski -->
            </StackPanel>

            <Canvas Name="myCanvas" Background="LightBlue" Grid.Column="1" MouseMove="MyCanvas_MouseMove" MouseLeftButtonDown="MyCanvas_MouseLeftButtonDown" MouseLeftButtonUp="MyCanvas_MouseLeftButtonUp">
                <Ellipse Name="myEllipse" Width="50" Height="50" Fill="Black"/>
            </Canvas>
        </Grid>
    </Window>
